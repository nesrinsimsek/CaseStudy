@model CreateTodoItemViewModel

@{
    ViewData["Title"] = "Create To-Do Item";
}

<h2>Create To-Do List</h2>

<form asp-action="Create" asp-controller="TodoItem" method="post">
    <div class="mb-3">
        <label asp-for="TodoItemCreateDto.User_Id" class="form-label">Select User</label>
        <select asp-for="TodoItemCreateDto.User_Id" class="form-select" asp-items="@(new SelectList(Model.Users, "Id", "FullName"))">
            <option value="">-- Select User --</option>
        </select>
        <span asp-validation-for="TodoItemCreateDto.User_Id" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TodoItemCreateDto.Title" class="form-label">Title</label>
        <input asp-for="TodoItemCreateDto.Title" class="form-control" />
        <span asp-validation-for="TodoItemCreateDto.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TodoItemCreateDto.Description" class="form-label">Description</label>
        <textarea asp-for="TodoItemCreateDto.Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="TodoItemCreateDto.DueDate" class="form-label">Due Date</label>
        <input asp-for="TodoItemCreateDto.DueDate" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>



